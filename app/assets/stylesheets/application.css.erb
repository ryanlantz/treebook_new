/* -------------------------- MUSIC PLAYER --------------------- */

#player {
	position: fixed;
	width: 30%;
	left: 35%;
	right: 35%;
	top: 0;
	z-index: 9999;
}

/* -------------------------- YIELD BEGINS HERE --------------------- */

.horizontalContent {
	position: absolute;
	top: 40px;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 6 !important;
}

.horizontalContent > div {
	white-space: nowrap;
	height: 100%;
	overflow-x: scroll; 
	overflow-y: hidden; 
}

#background {

	width: 90%;
	z-index: -1;
	position: fixed;
	left: 0;
	top: 40px;
	bottom: 0;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	/* -webkit-transform: translate3d(-540px, 0px, 0px); */
	-webkit-transition: opacity .5s;
	-webkit-transition-delay: 0s;
	-webkit-transition-duration: 0.5s;
	-webkit-transition-property: margin-left;
	-webkit-transition-timing-function: cubic-bezier(0.25,0.1,0.25,1);
	overflow: hidden;
}

#foreground {
	position: relative;
	height: 100%;
	left: 0;
	background-color: #F0F0F0;
}

/* This part makes it all work */
#foreground > * {
	border-sizing: border-box;
	float: left;
	height: 100%;
}

#parallax {
	padding-left: 0;
	white-space: normal;
}

#parallax #foreground {
	left: 72%;
	-webkit-transition: left .5s;
	-moz-transition: left .5s;
	transition: left .5s;
}

#parallax #background {
	margin-left: 0;
	-webkit-transition: margin-left .5s;
	-moz-transition: margin-left .5s;
	transition: margin-left .5s;
}

.horizontalContent .page-header {
	position: absolute;
}

.page-header {
	padding-left: 11%;
}

