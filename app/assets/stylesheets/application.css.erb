.modal-fullscreen {
	position: fixed;
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	top: 0%;
	left: 0;
	border-radius: 0;
	background: rgba(165,165,165,0.95);
	z-index: 10000;
}

.modal-fullscreen > .modal-body > *,
.modal-fullscreen > .modal-footer > * {
	text-align: center;
}

.modal-fullscreen > .modal-header {
	height: 5%;
	border: none;
}

.modal-fullscreen > .modal-body {
	padding: 15px 0;
	height: 85%;
	border: none;
}

.modal-fullscreen > .modal-footer {
	height: 5%;
	border: none;
	box-shadow: none;
	background: none;
}

.modal-fullscreen.fade.in {
	top: 0;
}


