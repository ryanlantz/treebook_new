	</div>
	<div class="modal-huge-body">
		<%= link_to image_tag(activity.targetable.asset.url), album_picture_path(activity.user.profile_name, activity.targetable.album_id, activity.targetable_id) %>
	</div>
	<div class="modal-footer">
		<a href="<%= album_path(activity.user.profile_name, activity.targetable.album_id) %>" class="btn btn-primary">Go to album</a>
		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		<span class="pull-left"><%= activity.targetable.description %></span>
	</div>

</div>
